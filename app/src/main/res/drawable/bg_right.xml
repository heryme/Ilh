<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">     <!-- ripple color -->

    <!-- for Button -->
    <item tools:ignore="StateListReachable">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/_8sdp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/_8sdp" />
            <solid android:color="@color/wyn_grey" />
        </shape>
    </item>

</selector>

