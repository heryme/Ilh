<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_75sdp"
        android:background="@drawable/bg_button_red_square">

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/tvDelete"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:paddingStart="@dimen/_14sdp"
            android:text="@string/delete"
            android:textColor="@color/white"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_event_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:orientation="vertical"
            android:padding="@dimen/_14sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_17"
                    app:setTypeFace="@string/font_regular"
                    tools:text="14" />

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/btn_color"
                    android:textSize="@dimen/font_size_15"
                    app:setTypeFace="@string/font_regular"
                    tools:text="Athletics club" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"
                    app:setTypeFace="@string/font_regular"
                    tools:text="Tues" />

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"
                    app:setTypeFace="@string/font_regular"
                    tools:text="2pm - 4pm " />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
