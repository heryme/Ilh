<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <com.activityhub.utils.other.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/height"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        app:setTypeFace="@string/font_regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <biz.kasual.materialnumberpicker.MaterialNumberPicker
                android:id="@+id/pickerDialogHeight"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:npDefaultValue="1"
                app:npMaxValue="8"
                app:npMinValue="1"
                app:npSeparatorColor="@color/black"
                app:npTextColor="#000000"
                app:npTextSize="25sp" />

            <com.activityhub.utils.other.MyCustomTextView
                android:id="@+id/tvDialogPickerLabelFt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ft"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                app:setTypeFace="@string/font_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <biz.kasual.materialnumberpicker.MaterialNumberPicker
                android:id="@+id/pickerDialogInch"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:npDefaultValue="1"
                app:npMaxValue="12"
                app:npMinValue="1"
                app:npSeparatorColor="@color/black"
                app:npTextColor="#000000"
                app:npTextSize="25sp" />

            <com.activityhub.utils.other.MyCustomTextView
                android:id="@+id/tvDialogPickerLabelIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inch"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:setTypeFace="@string/font_regular" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:gravity="right"
        android:orientation="horizontal">

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/tvDialogHeightCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="@string/cancel"
            android:textColor="@color/btn_color"
            app:setTypeFace="@string/font_regular" />

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/tvDialogHeightOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="@string/ok"
            android:textColor="@color/btn_color"
            app:setTypeFace="@string/font_regular" />


    </LinearLayout>

</LinearLayout>