<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_12sdp"
    android:background="@drawable/bg_white_square_border"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:layout_weight="2.2"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_splashh" />

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/text_video_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_black_square"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:textColor="@color/white_alpha_50"
            android:textSize="@dimen/_9ssp"
            app:setTypeFace="@string/font_regular"
            android:text="00:00" />

        <ImageView
            android:id="@+id/image_video_playing"
            android:visibility="gone"
            android:src="@drawable/ic_play_normal"
            android:contentDescription="@string/todo"
            android:layout_width="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_15sdp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/text_video_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="@color/wyn_green"
            android:textSize="@dimen/_12ssp"
            app:setTypeFace="@string/font_semibold"
            tools:text="@string/education" />

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/text_question_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            app:setTypeFace="@string/font_semibold"
            tools:text="123 gdfgdk hnkhdh dhkdhd ghlhdf hjdkhdf hjfdihdfh jdfhdf dhjiidhfd hdf jh fdjh hfdj hf hfj" />

    </LinearLayout>

</LinearLayout>
