<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_education"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:background="@drawable/bg_white_square_border"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:contentDescription="@string/todo"
            android:tint="@color/btn_color"
            tools:src="@drawable/ic_svg_green_education_new" />

        <com.activityhub.utils.other.MyCustomTextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_12ssp"
            app:setTypeFace="@string/font_semibold"
            tools:text="@string/education" />

    </LinearLayout>

    <com.activityhub.utils.other.MyCustomTextView
        android:id="@+id/text_category_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="start"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_10ssp"
        app:setTypeFace="@string/font_semibold"
        tools:text="@string/education" />

</LinearLayout>
