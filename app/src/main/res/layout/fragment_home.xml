<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/ic_splash"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <com.activityhub.utils.other.MyCustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/view_directory_des"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_small"
            app:setTypeFace="@string/font_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ivCom"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_svg_white_education"
                    android:tint="@color/white" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_toStartOf="@+id/ivCom"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_svg_white_calendar"
                    android:tint="@color/white" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_toEndOf="@+id/ivCom"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_svg_white_directory"
                    android:tint="@color/white" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center">

            <com.activityhub.utils.other.MyCustomButton
                android:id="@+id/button_view_directory"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_button_view_directory"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/view_directory"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                app:setTypeFace="@string/font_regular" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            tools:ignore="NestedWeights,UselessParent">

            <LinearLayout
                android:id="@+id/layout_directory"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_square_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ivHomeFragmentDirectory"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_svg_green_directory"
                    android:tint="@color/btn_color" />


                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvHomeFragmentDirectory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/directory"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_10"
                    app:setTypeFace="@string/font_semibold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_calendar"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_square_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHomeFragmentCalender"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_svg_green_calendar"
                    android:tint="@color/btn_color" />


                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvHomeFragmentCalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/calender"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_10"
                    app:setTypeFace="@string/font_semibold" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp"
            tools:ignore="NestedWeights,UselessParent">

            <LinearLayout
                android:id="@+id/layout_education"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_square_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ivHomeFragmentEducation"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_svg_green_education_new"
                    android:tint="@color/btn_color" />

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvHomeFragmentEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/education"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_10"
                    app:setTypeFace="@string/font_semibold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_result"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_square_border"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ivHomeFragmentResult"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:contentDescription="@string/todo"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_svg_green_results_new"
                    android:tint="@color/btn_color" />


                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/tvHomeFragmentResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/result"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_10"
                    app:setTypeFace="@string/font_semibold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
