<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_43sdp"
    android:layout_marginEnd="@dimen/_43sdp"
    android:background="@drawable/dialogue"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_dialogue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            tools:text="@string/logout_message" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@color/black_alpha_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_left"
            android:padding="@dimen/_14sdp">

            <TextView
                android:id="@+id/text_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="MontserratRegular"
                android:text="@string/close_no"
                android:textColor="@color/wyn_blue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black_alpha_5" />

        <LinearLayout
            android:id="@+id/layout_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_right"
            android:padding="@dimen/_14sdp">

            <TextView
                android:id="@+id/text_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="MontserratRegular"
                android:text="@string/close_yes"
                android:textColor="@color/wyn_blue"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


