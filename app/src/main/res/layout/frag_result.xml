<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:background="@drawable/ic_splash"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_svg_green_results_new"
                    android:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <com.activityhub.utils.other.MyCustomTextView
                    android:id="@+id/textResults"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/results"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title"
                    app:setTypeFace="@string/font_regular" />

                <com.activityhub.utils.other.MyCustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Keeping track your results  and progress"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"
                    app:setTypeFace="@string/font_regular" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMyAssessmentPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/bg_white_square_border">

        <com.activityhub.utils.other.MyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:text="@string/patient_reported_outcome_measure_prom"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:setTypeFace="@string/font_semibold" />

    </LinearLayout>

</LinearLayout>
