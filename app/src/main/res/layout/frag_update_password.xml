<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccSetting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccSetting"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:paddingTop="@dimen/_35sdp"
        android:visibility="visible">

        <com.activityhub.utils.other.MyCustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:drawableTint="@color/btn_color"
            android:text="@string/update_password"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:setTypeFace="@string/font_semibold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white"
            android:orientation="vertical">

            <com.activityhub.utils.other.MyCustomEdittext
                android:id="@+id/etUpdatePasswordFragmentOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/email_change_rounded_edittext"

                android:padding="@dimen/_10sdp"
                android:gravity="start|center"
                android:textColor="#707070"
                android:textColorHint="#707070"
                android:drawableStart="@color/white"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:textSize="@dimen/font_normal"
                app:setTypeFace="@string/font_regular" />

            <com.activityhub.utils.other.MyCustomEdittext
                android:id="@+id/etUpdatePasswordFragmentNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/email_change_rounded_edittext"
                android:drawableStart="@color/white"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:gravity="start|center"
                android:textColor="#707070"
                android:textColorHint="#707070"
                android:textSize="@dimen/font_normal"
                app:setTypeFace="@string/font_regular" />

            <com.activityhub.utils.other.MyCustomButton
                android:id="@+id/btnUpdatePasswordFragmentSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/bg_button_blue_square"
                android:text="@string/save_changes"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                app:setTypeFace="@string/font_regular" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F2F2" />
</LinearLayout>